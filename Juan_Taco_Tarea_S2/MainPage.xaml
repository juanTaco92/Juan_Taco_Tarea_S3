<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Juan_Taco_Tarea_S2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Tarea Semana 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image Source="logo.png"/>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario"/>
        <Entry x:Name="txtPassword" Placeholder="Ingrese contraseña" IsPassword="True"/>
        <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>
    </StackLayout>

</ContentPage>
